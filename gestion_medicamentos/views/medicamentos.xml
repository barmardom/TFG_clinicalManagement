<odoo>
  <data>
    <template id="assets_backend" name="gestion_medicamentos css assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" href="/gestion_medicamentos/static/src/css/style.css"/>
        </xpath>
    </template>

    <record model="ir.ui.view" id="gestion_medicamentos.list">
      <field name="name">Todos los medicamentos</field>
      <field name="model">gestion_medicamentos.medicamento</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="codigo"/>
          <field name="presentacion"/>
          <field name="cantidad"/>
          <field name="unidad"/>
          <field name="enlace" widget="url"/>
        </tree>
      </field>
    </record>

    <record id="gestion_medicamentos.form" model="ir.ui.view">
        <field name="name">medicamentos.form</field>
        <field name="model">gestion_medicamentos.medicamento</field>
        <field name="arch" type="xml">
            <form string="Lista de Medicamentos">
                <sheet>
                    <label for="name" string="Nombre" />
                    <h1 class="colorGeneral">
                        <field name="nombre"/>
                    </h1>
                    <notebook>
                        <page string="Informacón General">
                            <group>
                                <group colspan="4" col="4">
                                    <field name="codigo"/>
                                    <field name="presentacion"/>
                                    <field name="cantidad"/>
                                    <field name="unidad"/>
                                    <field name="enlace" widget="url"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestion_medicamentos.action_window">
      <field name="name">Ventana de medicmaentos</field>
      <field name="res_model">gestion_medicamentos.medicamento</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Gestión de Medicamentos" id="gestion_medicamentos.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Medicamentos" id="gestion_medicamentos.medicamentos" parent="gestion_medicamentos.menu_root"/>

    <!-- actions -->

    <menuitem name="Todos los medicamentos" id="gestion_medicamentos.medicamentos_list" parent="gestion_medicamentos.medicamentos"
              action="gestion_medicamentos.action_window"/>

  </data>
</odoo>
