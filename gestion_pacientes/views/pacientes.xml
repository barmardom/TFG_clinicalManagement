    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="gestion_pacientes.list">
      <field name="name">Todos los pacientes</field>
      <field name="model">gestion_pacientes.paciente</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="apellidos"/>
          <field name="nif"/>
          <field name="fechaNacimiento"/>
          <field name="genero"/>
          <field name="telefono"/>
          <field name="email"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="gestion_pacientes.action_window">
      <field name="name">Ventana de pacientes</field>
      <field name="res_model">gestion_pacientes.paciente</field>
      <field name="view_mode">tree,form</field>
    </record>


