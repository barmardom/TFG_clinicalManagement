<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<odoo>
  <data>

    <record id="gestion_clinica.estadisticas_general" model="ir.ui.view">
        <field name="name">alertas.general</field>
        <field name="model">gestion_clinica.estadistica</field>
        <field name="arch" type="xml">
            <form string="estadistica" create="false">
              <sheet>
                <h1 class="colorGeneral">Estadísticas del sistema</h1>
                <separator/>
                  <notebook>
                      <page string="Informacón General">
                          <group>
                              <group colspan="4" col="4">
                                  <field name="totalPacientes"/>
                                  <field name="totalMujeres"/>
                                  <field name="totalHombres"/>
                              </group>  
                              <button custom="click" string="Carga gráfico"/>
                              <div id="piechart" style="width: 900px; height: 500px;"></div>
                          </group>
                      </page>
                  </notebook>
              </sheet>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="gestion_clinica.action_windowEstadisticas2">
      <field name="name">Estadisticas</field>
      <field name="res_model">gestion_clinica.estadistica</field>
      <field name="view_mode">form</field>
    </record>
    
    <!-- menu categories -->

    <menuitem name="Estadísticas" id="gestion_clinica.estadisticas" parent="gestion_clinica.menu_root" groups="base.group_system,group_clinica_distribuidor"/>

    <!-- actions -->

    <menuitem name="Prueba estadisticas" id="gestion_clinica.estadistica_1" parent="gestion_clinica.estadisticas"
              action="gestion_clinica.action_windowEstadisticas2"/>


            
  </data>
</odoo>
